<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardBackground"
    >

    <ImageButton
        android:id="@+id/CloseButtonFrage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/contentDescriptionClosebutton"
        android:gravity="end"
        android:src="@drawable/closebutton" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"            >

            <TextView
                android:id="@+id/HeadlineQuestion"
                android:text="@string/headline_qcard"
                android:textColor="@color/cardText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/headline_marginTop"
                android:layout_marginStart="@dimen/card_marginStart"
                android:layout_marginBottom="6dp"
                android:textSize="@dimen/headline_textSize"
                />

            <TextView
                android:id="@+id/Question"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_marginStart"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/card_marginStart"
                android:text="@string/Lorem_ipsum"
                android:textColor="@color/cardText"
                android:textSize="@dimen/text_textSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="@dimen/card_marginStart"
                android:paddingEnd="40dp"
                android:paddingTop="60dp"
                android:paddingBottom="60dp"
                >

                <EditText
                    android:id="@+id/QuestionField"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="@dimen/text_textSize"
                    android:hint="@string/questionHint"
                    android:autofillHints="@string/autofillhints"
                    />

                <Button
                    android:id="@+id/ApplyButton"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:layout_width="0dip"
                    android:layout_marginStart="12dp"
                    android:background="@color/cardBackground"
                    android:text="@string/questionButton"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_textSize" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>